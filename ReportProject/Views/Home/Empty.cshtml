    <script type="text/javascript">
        function showInChart(i, j, ctrl) {

            var list = document.getElementById("myUL").getElementsByTagName('li');

            for (p = 0; p < list.length; p++) {
                list[p].style.background = 'white';
            }

            ctrl.style.background = '#76CDD8';

